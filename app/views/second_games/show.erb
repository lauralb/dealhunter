<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
  <title>Game</title>
</head>
<body>

<div class="page-content">
  <input type="hidden" id="questions" value="<%=@questions.as_json%>" >
  <div class="container" id="questionContainer">
    <div class="show-quiz">
      <%= form_tag "/second_games/results" do %>
        <div class="question">


          <h1>@question</h1>
        </div>
        <div id ="image">
          <img id="question_image">
        </div>
        <div class="answer">
          <input type="text" id="answerInput" name="answer" placeholder="Respuesta">
          <!--<button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="addTr">Confirmar</button>-->
          <button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="next">Siguiente</button>
        </div>
        <div class="timer">
          <h2 id="timer">
            <span id="timer-minutes">00</span>:<span id="timer-seconds">00</span>
            <input type="text" class="hidden" name="time" id="time">
            <input type="text" class="hidden" name="score" id="score">
          </h2>
        </div>
        <br>
        <br>
        <div class="submit" hidden>
            <input type="submit" id="submitBt">
        </div>
          <% end %>

    </div>
  </div>
</div>

<!--Scripts-->
<script src="../../assets/game2logic.js"></script>
<script src="../../assets/game1.js"></script>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="../../assets/alertify.min.js"></script>

<link href="../../assets/game1.css" rel="stylesheet" type="text/css">
<link href="../../assets/alertify.bootstrap.css" rel="stylesheet" type="text/css">
<link href="../../assets/alertify.core.css" rel="stylesheet" type="text/css">
<link href="../../assets/alertify.default.css" rel="stylesheet" type="text/css">



</body>
</html>
